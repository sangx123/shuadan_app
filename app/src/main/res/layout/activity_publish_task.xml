<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.publish.PublishTaskActivity">
    <com.xinfu.qianxiaozhuang.widgets.MTitleBar
        android:layout_width="wrap_content"
        app:title="发布任务"
        app:left_icon="@drawable/icon_back_black"
        android:layout_height="wrap_content">
    </com.xinfu.qianxiaozhuang.widgets.MTitleBar>
    <com.xinfu.qianxiaozhuang.widgets.KeyValueLayout
        android:layout_marginTop="10dp"
        android:id="@+id/mTitle"
        android:layout_width="wrap_content"
        app:kvl_text_hint="任务名字："
        app:kvl_edit="true"
        app:kvl_edit_hint="请输入任务标题"
        app:kvl_has_right_arrow="false"
        android:layout_height="wrap_content">
    </com.xinfu.qianxiaozhuang.widgets.KeyValueLayout>
    <com.xinfu.qianxiaozhuang.widgets.KeyValueLayout
        android:id="@+id/mContent"
        android:layout_width="wrap_content"
        app:kvl_text_hint="任务内容："
        android:layout_height="wrap_content">
    </com.xinfu.qianxiaozhuang.widgets.KeyValueLayout>
    <com.xinfu.qianxiaozhuang.widgets.KeyValueLayout
        android:id="@+id/mTaskType"
        android:layout_width="wrap_content"
        app:kvl_text_hint="任务类型："
        android:layout_height="wrap_content">
    </com.xinfu.qianxiaozhuang.widgets.KeyValueLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/_mBenjin"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:text="任务本金(元)："
            android:layout_marginRight="20dp"
            />
        <EditText
            android:id="@+id/mBenjin"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/_mBenjin"
            android:gravity="center_vertical|left"
            android:hint="请输入任务本金"
            android:inputType="numberDecimal"
            android:textColor="#626471"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/sp_18"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/_mJiangli"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:text="任务奖励(元)："
            android:layout_marginRight="20dp"
            />
        <EditText
            android:id="@+id/mJiangli"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/_mJiangli"
            android:gravity="center_vertical|left"
            android:hint="请输入任务奖励"
            android:inputType="numberDecimal"
            android:textColor="#626471"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/sp_18"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/_mPeopleNum"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:text="任务人数："
            android:layout_marginRight="20dp"
            />
        <EditText
            android:id="@+id/mPeopleNum"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/_mPeopleNum"
            android:gravity="center_vertical|left"
            android:hint="请输入需要的人数"
            android:inputType="number"
            android:textColor="#626471"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/sp_18"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <Button
        android:id="@+id/mBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/btn_blue"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>