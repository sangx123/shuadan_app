<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.loan.AuthUserInfoActivity">
    <com.xinfu.qianxiaozhuang.widget.CommonTitleBar
        android:id="@+id/titlebar_withdraw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
         />
    <LinearLayout
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@color/color_f5f5f5"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一旦保存资料将无法修改，请务必保证正确"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/color_30A3FF"
            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/mFace"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:text="人脸识别"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/tv_title_layout0"
            >

            <ImageView
                android:id="@+id/faceImage"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_34"
                android:scaleType="fitXY"
                android:src="@drawable/ic_face_auth"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_E5E5E5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:text="身份证识别"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/tv_title_layout0"
            >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_34"
                android:scaleType="fitXY"
                android:src="@drawable/ic_zheng_shenfenzheng"

                />
            <ImageView
                android:id="@+id/image2"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_34"
                android:scaleType="fitXY"
                android:src="@drawable/ic_fan_shenfenzheng"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_E5E5E5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/_name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:text="姓名"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/_name"
            >

           <EditText
               android:id="@+id/mName"
               android:layout_width="match_parent"
               android:background="@color/white"
               android:gravity="center_vertical|right"
               android:textColor="@color/color_333333"
               android:textSize="@dimen/sp_16"
               android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_E5E5E5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/_shenfenzheng"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:text="身份证"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/_shenfenzheng"
            >

            <EditText
                android:id="@+id/mIdCard"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical|right"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/mBtn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="61dp"
        android:background="@drawable/btn_blue"
        android:text="保存"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        />
</LinearLayout>