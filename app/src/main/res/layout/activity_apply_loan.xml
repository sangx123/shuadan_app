<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.loan.ApplyLoanActivity">
    <com.xinfu.qianxiaozhuang.widget.CommonTitleBar
        android:id="@+id/titlebar_withdraw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white" />
    <RelativeLayout
        android:background="@drawable/bg_get_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_142"
            android:layout_height="@dimen/dp_142">
            <ImageView
                android:layout_width="@dimen/dp_142"
                android:layout_height="@dimen/dp_108"
                android:src="@drawable/jindu"
                />
           <com.xinfu.qianxiaozhuang.widgets.CircleView
               android:layout_marginLeft="@dimen/dp_21"
               android:layout_marginTop="@dimen/dp_21"
               android:id="@+id/progress_circular"
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_100" />
            <TextView
                android:id="@+id/mNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_50"
                android:text="670"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_100"
                android:text="信用分"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/white"
                />
        </RelativeLayout>

    </RelativeLayout>
    <com.xinfu.qianxiaozhuang.widgets.KeyValueLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/toApplyLoanReport"
        app:kvl_text_hint="个人申请资格评估报告"
        app:kvl_has_right_arrow="true"
        app:kvl_has_line="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.xinfu.qianxiaozhuang.widgets.KeyValueLayout>
    <Button
        android:layout_marginTop="@dimen/dp_95"
        android:id="@+id/toGetMoneyBtn"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_height="@dimen/dp_44"
        android:text="去借款"
        android:background="@drawable/btn_blue"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        />
</LinearLayout>