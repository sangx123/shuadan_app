                            <!--android:gravity="center_vertical|right"-->
                            <!--android:hint="@string/please_select"-->
                            <!--android:imeOptions="actionDone"-->
                            <!--android:paddingRight="@dimen/dp_16"-->
                            <!--android:singleLine="true"-->
                            <!--android:textColor="@color/black"-->
                            <!--android:textColorHint="@color/color_cccccc"-->
                            <!--android:textSize="@dimen/sp_13" />-->

                        </RelativeLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_e5e5e5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:paddingLeft="@dimen/dp_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="@string/emergency_contact"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <com.xinfu.qianxiaozhuang.widget.EditTextWithClear
                                android:id="@+id/name2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/image_social_contact"
                                android:background="@color/transparent"
                                android:gravity="center_vertical"
                                android:hint="@string/please_input_real_name"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="11"
                                android:paddingRight="@dimen/dp_10"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/color_cccccc"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/image_social_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_16"
                                android:visibility="gone" />

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_e5e5e5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:paddingLeft="@dimen/dp_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="@string/contact_way"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <com.xinfu.qianxiaozhuang.widget.EditTextWithClear
                                android:id="@+id/et_other_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:gravity="center_vertical"
                                android:hint="@string/please_input_contacts"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="11"
                                android:paddingRight="@dimen/dp_10"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/color_cccccc"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_e5e5e5" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_sure"
                android:layout_width="@dimen/dp_245"
                android:layout_height="@dimen/dp_46"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_54"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/drawable_concer_login_blue"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </ScrollView>
